{
  "compilerOptions": {
    "lib": ["es6", "dom", "es5"],
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./.build",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
